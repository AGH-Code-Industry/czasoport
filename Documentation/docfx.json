{
    "metadata": [
        {
            "src": [
                {
                    "src": "..",
                    "files": [
                        "Assets/**/*.cs"
                    ],
                    "exclude": [
                        "Assets/Plugins/**"
                    ]
                }
            ],
            "globalNamespaceId": "Global",
            "dest": "api",
            "allowCompilationErrors": true
        }
    ],
    "build": {
        "template": [ "default", "modern", "templates/material" ],
        "globalMetadata": {
            "_appTitle": "Czasoport Documentation",
            "_appFooter": "I was generated automatically",
            "_enableSearch": true
        },
        "content": [
            {
                "files": [
                    "toc.yml"
                ]
            },
            {
                "src": "api",
                "files": [
                    "*.yml"
                ],
                "dest": "api"
            },
            {
                "src": "manual",
                "files": [
                    "toc.yml",
                    "*.md",
                    "**/*.md"
                ],
                "dest": "manual"
            },
            {
                "src": "home",
                "files": [
                    "toc.yml",
                    "*.md"
                ],
                "dest": "home"
            },
            {
                "src": "GDD",
                "files": [
                    "toc.yml",
                    "*.md",
                    "**/*.md"
                ],
                "dest": "gdd"
            }
        ],
        "overwrite": [
            {
                "src": "..",
                "files": [
                    "Assets/Scripts/**/*.md"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "resources/**/*",
                    "GDD/assets/**/**/*"
                ]
            }
        ],
        "sitemap": {
            "baseUrl": "https://normanderwan.github.io/DocFxForUnity",
            "changefreq": "weekly",
            "fileOptions": {
                "api/*": {
                    "changefreq": "daily"
                }
            }
        },
        "xref": [
            "https://normanderwan.github.io/UnityXrefMaps/xrefmap.yml"
        ],
        "xrefService": [
            "https://xref.docs.microsoft.com/query?uid={uid}"
        ],
        "dest": "../_site"
    }
}